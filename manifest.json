{
  "manifest_version": 3,
  "name": "Salesforce Field Search Helper",
  "version": "1.1",
  "description": "Replaces Quick Find and fetches picklist values using the loggedâ€‘in session.",
  "permissions": [
    "cookies",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.lightning.force.com/*",
    "https://*.my.salesforce.com/*",
    "https://*.sandbox.my.salesforce.com/*",
    "https://*.sandbox.lightning.force.com/*",
    "https://*.salesforce-setup.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.lightning.force.com/lightning/setup/*",
        "https://*.salesforce-setup.com/lightning/setup/*"
      ],
      "exclude_matches": [
        "https://*.lightning.force.com/lightning/setup/ObjectManager/home*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
